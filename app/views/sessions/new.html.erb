<div id="login">

  <%= form_tag("/sessions", :method => "post") do |f| %>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= submit_tag "Login" %>
  <% end %>

</div>
