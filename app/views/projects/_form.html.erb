<%= form_for @project  do |f| %>
  <% if @project.errors.any? %>
   <div class="error_messages">
     <h2>Form is invalid</h2>
     <ul>
       <% for message in @project.errors.full_messages %>
         <li><%= message %></li>
       <% end %>
     </ul>
    </div>
  <% end %>
  <div class="form-row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-row">
    <%= f.label :is_active %>
    <%= f.check_box :is_active %>
  </div>
  <div class="form-row">
    <%= f.submit 'Save' %>
  </div>
<% end %>
