<h1>Bugaboo</h1>
<div id="logo"><img src="/assets/icon.png" width="72"></div>
<% if current_user %>
  <nav>
    <%= link_to 'Bugs', bugs_path %>
    <%= link_to 'Projects', projects_path %>
    <% if can? :manage, User %>
      <%= link_to 'Users', users_path %>
    <% end %>
    <%= link_to 'Logout', logout_path %>
  </nav>
<% else %>
  <%= link_to 'Login', login_path, :class => "login-btn" %>

<% end %>

